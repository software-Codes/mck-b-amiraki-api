# Specify the base image with a specific version for reproducibility
FROM node:22.2.0-bullseye

# Create a non-root user with sudo access
RUN apt-get update && \
    apt-get install -y sudo curl git

# Install development dependencies and tools
RUN npm install -g nodemon 

# Install Docker CLI
RUN curl -fsSL https://get.docker.com/builds/Linux/x86_64/docker-latest.tgz | tar xzvf - --strip 1 -C /usr/local/bin docker/docker

# Install Docker Compose
RUN DOCKER_COMPOSE_VERSION=$(curl -s https://api.github.com/repos/docker/compose/releases/latest | grep '"tag_name":' | sed -E 's/.*"v([^"]+)".*/\1/') && \
    curl -L "https://github.com/docker/compose/releases/download/v${DOCKER_COMPOSE_VERSION}/docker-compose-$(uname -s)-$(uname -m)" -o /usr/local/bin/docker-compose && \
    chmod +x /usr/local/bin/docker-compose

# Install Azure CLI
RUN curl -sL https://aka.ms/InstallAzureCLIDeb | bash

# Install additional useful tools
RUN apt-get update && apt-get install -y \
    build-essential \
    ca-certificates \
    gnupg \
    lsb-release \
    software-properties-common \
    && rm -rf /var/lib/apt/lists/*



# Set working directory
WORKDIR /workspace

# Set the user to node
USER node

# Ensure npm is configured for global installs without sudo
RUN mkdir -p ~/.npm-global \
    && npm config set prefix '~/.npm-global' \
    && echo 'export PATH=~/.npm-global/bin:$PATH' >> ~/.bashrc

# Expose any necessary ports
EXPOSE 3000

# Default command
CMD ["/bin/bash"]